    <script>
         const moouseclick = document.getElementById('mouse-click');

         moouseclick.addEventListener('click', () => {
            alert('Fired when the user clicks an element!');
         });

         const dbclicks = document.getElementById('double-click');

            dbclicks.addEventListener('dblclick', () => {
   alert('Fired when the user clicks an element!');
});
const mddown = document.getElementById('mdown');

         mddown.addEventListener('mousedown', () => {
            alert('Fired when the user clicks an element!');
         });

         const mdup = document.getElementById('mup');

         mdup.addEventListener('mouseup', () => {
            alert('Fired when the user clicks an element!');
         });
         const mouseover = document.getElementById('mouseover');

mouseover.addEventListener('mouseover', () => {
   alert('Fired when the user clicks an element!');
});
const mouseout = document.getElementById('mouseout');

mouseout.addEventListener('mouseout', () => {
   alert('Fired when the user clicks an element!');
});
const mousemove = document.getElementById('mousemove');

mousemove.addEventListener('mousemove', () => {
   alert('Fired when the user clicks an element!');
});
